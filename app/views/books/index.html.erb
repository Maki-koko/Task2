<p>Find me in app/views/books/index.html.erb</p>


 <table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <tr>
  <%= @books.each do |list| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><a href="/books/:id">Show</a></td>
    <td><a href="/books/edit">Edit</a></td>
    <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  <% end %>
  <tr>
</table>


<div class="New-post">
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_field :body %>
    <%= f.submit :"Create Book"%>
  <%end%>
</div>