<%= flash[:notice] %>

<h1>Editing Book</h1>

<div class="edit">
  <% if @book.errors.any? %>
    <p>Please check the error details.</p>
    <ul>
      <% @book.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <%end%>
    </ul>
  <%end%>

  <%= form_with model: @book do |rewrite| %>
    <p class="text">Title</p>
    <%= rewrite.text_field :title %>
    <p class="text">Body</p>
    <%= rewrite.text_field :body %>
    <%= rewrite.submit :"Update Book"%>
  <%end%>
</div>

  <%=link_to "Show", book_path(@book.id)%>|<%=link_to "Back",books_path %>